<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConnectMenu" >

    <TextView
        android:id="@+id/connect_menu_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/enter_address"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/connect_menu_hosttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_menu_host"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textUri" />

    <TextView
        android:id="@+id/connect_menu_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_menu_hosttext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/enter_port"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/connect_menu_porttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_menu_port"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/connect_menu_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/connect_menu_porttext"
        android:text="@string/connect" 
        android:onClick="connect_onClick" />

</RelativeLayout>